<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bdc3c7"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    tools:context="info.androidhive.materialtabs.fragments.OneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="ID : 99999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvData1"
            android:textSize="24sp" />

        <TextView
            android:text="NAMA : SAMARAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvData2"
            android:paddingTop="12dp"
            android:textSize="24sp" />

        <TextView
            android:text="STATUS : DISAMAKAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvData3"
            android:paddingTop="12dp"
            android:textSize="24sp" />

        <TextView
            android:text="SALDO : 0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvData4"
            android:paddingTop="12dp"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lakukan Transaksi"
        android:id="@+id/btnTransaksi"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>